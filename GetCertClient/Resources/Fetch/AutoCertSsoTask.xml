<?xml version="1.0" encoding="UTF-16"?>
<Task version="1.2" xmlns="http://schemas.microsoft.com/windows/2004/02/mit/task">
  <RegistrationInfo>
    <Author>AutoCertNow.com</Author>
    <Description>Executes AutoCert.exe within a specific security context.</Description>
    <Documentation>
        1) Import "AutoCertSsoTask.xml" into Task Scheduler.
        2) Set this task's security context to a domain admin account.
        3) The software will run in "-Auto -NoPrompts" mode. Check the AutoCert log.
        4) Add to AutoCert host: -Task='-OnStartup=True -StartTime="1:10 AM" -CommandEXE=schtasks.exe -CommandArgs="/run /tn AutoCertSsoTask" -CreateNoWindow'
    </Documentation>
    <URI>\AutoCertSsoTask</URI>
  </RegistrationInfo>
  <Triggers />
  <Principals>
    <Principal id="Author">
      <UserId>[Domain Admin here.]</UserId>
      <LogonType>Password</LogonType>
      <RunLevel>HighestAvailable</RunLevel>
    </Principal>
  </Principals>
  <Settings>
    <MultipleInstancesPolicy>IgnoreNew</MultipleInstancesPolicy>
    <DisallowStartIfOnBatteries>false</DisallowStartIfOnBatteries>
    <StopIfGoingOnBatteries>false</StopIfGoingOnBatteries>
    <AllowHardTerminate>true</AllowHardTerminate>
    <StartWhenAvailable>false</StartWhenAvailable>
    <RunOnlyIfNetworkAvailable>false</RunOnlyIfNetworkAvailable>
    <IdleSettings>
      <StopOnIdleEnd>true</StopOnIdleEnd>
      <RestartOnIdle>false</RestartOnIdle>
    </IdleSettings>
    <AllowStartOnDemand>true</AllowStartOnDemand>
    <Enabled>true</Enabled>
    <Hidden>false</Hidden>
    <RunOnlyIfIdle>false</RunOnlyIfIdle>
    <WakeToRun>false</WakeToRun>
    <ExecutionTimeLimit>PT72H</ExecutionTimeLimit>
    <Priority>7</Priority>
  </Settings>
  <Actions Context="Author">
    <Exec>
      <Command>C:\ProgramData\AutoCert\AutoCert.exe</Command>
      <Arguments>-Auto -NoPrompts</Arguments>
    </Exec>
  </Actions>
</Task>
